<h1>Posts</h1>
	<table>
		<tr>
			<th>Title </th>
			<th>|</th>
			<th>Text</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
		<% @posts.each do |post| %>
		<tr>
			<td><%= post.title %></td>
			<td>|</td>
			<td><%= truncate(post.text, :length => 10) %></td>
			<td><%= link_to "Read More", post_path(post) %></td>
			<td><%= link_to "Edit", edit_post_path(post) %></td>
			<td><%= link_to "Delete", post_path(post),method: :delete, data: {confirm: "Are you sure!"}  %></td>
		</tr>
		<% end %>
	</table>

<br><br><br>
<%= link_to 'New Posts', new_post_path %><br>
